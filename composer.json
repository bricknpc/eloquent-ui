{
  "name": "bricknpc/eloquent-ui",
  "description": "PHP-first UI components and behaviours for Laravel applications using Blade.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "BrickNPC\\EloquentUI\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "BrickNPC\\EloquentUI\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.5",
    "illuminate/support": "^12.0",
    "illuminate/translation": "^12.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "orchestra/workbench": "^10.0",
    "friendsofphp/php-cs-fixer": "^3.93",
    "phpstan/phpstan": "^2.1"
  },
  "scripts": {
    "cs": "php vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
    "ps": "php vendor/bin/phpstan analyse --memory-limit=2G -c phpstan.neon",
    "test": "php vendor/bin/phpunit -c phpunit.xml --colors=always --coverage-html tests/coverage/html"
  },
  "extra": {
    "laravel": {
      "providers": [
        "BrickNPC\\EloquentUI\\Providers\\EloquentUIServiceProvider"
      ]
    }
  }
}
